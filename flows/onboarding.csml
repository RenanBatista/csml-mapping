import {SetActivityDone} from global_functions

start:
  say "**You are in onboarding**"

  goto step welcome

welcome:

  say current_activity.prompt

  if (current_activity.media){
    say current_activity.media
  }

  say Wait(1500)

  goto step end_onboarding

end_onboarding:

  remember course_data = SetActivityDone(current_activity, course_data)
  
  goto next_question@global_controller

//Fix to better flow
b2c_onboarding:
  say "Olá, qual é o seu nome?"

  hold

  remember username = event
  remember onboarded = true

  say "🤗 Prazer em conhece-lo {{username}}."

  goto flow menu

